<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#4dc3ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_team_post_reply_sender_name_TW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Ion Marcel"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/card_team_post_reply_send_date_TW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23-05-2022"
                android:textColor="#939292"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/card_team_post_reply_text_TW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Acesta este un mesaj trimis de Ion Marcel 3333333333333 4435345"
            android:textColor="#939292"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>

        <Button
            android:id="@+id/card_team_post_reply_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Delete reply"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_gravity="end"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>