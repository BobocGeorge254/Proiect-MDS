<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fffeb8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/card_team_logo_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                app:srcCompat="@drawable/placeholder" />

            <TextView
                android:id="@+id/card_team_name_TW"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="FLP"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/card_team_3dots_imageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/vertical_dots"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/card_team_description_TW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Jale"
            android:textColor="#939292"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/card_team_open_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Open"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>